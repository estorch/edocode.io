html(lang="en")
  head
    title OneHitCombo.com
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(http-equiv='Content-Style-Type', content='text/css')
    meta(name='copyright', content='© Eric Storch')
    meta(name='author', lang='en', content='Eric Storch')
    meta(name='robots', content='Index,Follow')
    meta(name='description', content='Portfolio & Web-Service Demonstration Platform')
    meta(name='keyword', content='Eric Storch, Software Developer, Programmer, Seattle')
  body(ng-app="app", ng-controller="appController")
    div.container-non-responsive
      div(class="header ohc-header")
        a(href="#")
          img(src="images/logo.jpg")
        div.pull-right
          a(ng-href="#/about")
            img(src="images/about.jpg", id="about", class="menu-item")
          a(href="#/examples")
            img(src="images/examples.jpg", id="examples", class="menu-item")
          a(href="#/resume")
            img(src="images/resume.jpg", id="resume", class="menu-item")
          a(href="#/linkedin")
            img(src="images/linkedin.jpg", id="linkedin", class="menu-item")
          a(href="#/github")
            img(src="images/github.jpg", id="github", class="menu-item")
          a(href="#/contact")
            img(src="images/contact.jpg", id="contact", class="menu-item")
      div.row
        div.col-xs-12
          div(ng-view)
      div.row
        div.footer
          p.page-footer
            | © 2014 Eric Storch<br>
            | Site Created With&nbsp;
            a(href="angularjs.org/", target="_blank") AngularJS&nbsp;
            | /&nbsp;
            a(href="getbootstrap.com/", target="_blank") Bootstrap

link(rel="stylesheet", href="css/bootstrap.css")
link(rel="stylesheet", href="css/custom.css")
script(src="js/angular.js")
script(src="js/angular-route.js")
script(src="js/jquery.js")
script(src="js/app.js")
script(src="js/custom.js")