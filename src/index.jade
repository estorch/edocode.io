doctype html

html(lang="en")
  head
    title edocode.io - where turtles fly
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(http-equiv='Content-Style-Type', content='text/css')
    meta(name='copyright', content='© Eric Storch')
    meta(name='author', lang='en', content='Eric Storch')
    meta(name='robots', content='Index,Follow')
    meta(name='description', content='Portfolio & Web-Service Demonstration Platform')
    meta(name='keyword', content='Eric Storch, Software Developer, Programmer, Seattle')
    link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
    link(rel="icon", href="/favicon.ico", type="image/x-icon")
    link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400', rel='stylesheet', type='text/css')
  body(ng-app="app", ng-controller="appController")
    div#edo-page-wrapper
      div#edo-navbar-wrapper
        div#edo-navbar
          div#edo-navbar-logo
            a(ng-href="#/about", alt="edocode.io - where turtles fly")
              img(ng-src="assets/images/logo.jpg")
          div.edo-navbar-item#about
            a(ng-href="#/about")
              div.edo-navbar-overbar#about-overbar
              div.edo-navbar-name#about-name
                p About
          div.edo-navbar-item#web-services
            a(ng-href="#/services")
              div.edo-navbar-overbar#web-services-overbar
              div.edo-navbar-name#web-services-name
                p Web-Services
          div.edo-navbar-item#resume
            a(ng-href="#/resume")
              div.edo-navbar-overbar#resume-overbar
              div.edo-navbar-name#resume-name
                p Résumé
          div.edo-navbar-item#contact
            a(ng-href="#/contact")
              div.edo-navbar-overbar#contact-overbar
              div.edo-navbar-name#contact-name
                p Contact
          div#edo-navbar-tail
            a(href="http://www.linkedin.com/pub/eric-storch/5a/5ba/654/", target="_blank")
              img.tail-img#linkedin(ng-src='assets/images/linkedin.jpg')
            a(href="https://github.com/himalstorch/edocode.io", target="_blank")
              img.tail-img#github(ng-src='assets/images/github.jpg')
      div#edo-content-wrapper
        div(ng-view)

      div#edo-footer-wrapper
        div#edo-footer
          p
            | © 2014 Eric Storch<br>
            | Site Created With&nbsp;
            a(href="https://angularjs.org/", target="_blank") AngularJS&nbsp;
            | /&nbsp;
            a(href="http://getbootstrap.com/", target="_blank") Bootstrap

link(rel="stylesheet", href="css/bootstrap.css")
link(rel="stylesheet", href="css/custom.css")
script(src="js/angular.js")
script(src="js/angular-route.js")
script(src="js/angular-resource.js")
script(src="js/ui-bootstrap-tpls.js")
script(src="js/jquery.js")
script(src="js/app.js")
script(src="js/templates.js")
script(src="js/services.js")
script(src="js/custom.js")

