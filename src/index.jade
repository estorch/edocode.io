html(lang="en")
  head
    title edocode.io - when turtles fly
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(http-equiv='Content-Style-Type', content='text/css')
    meta(name='copyright', content='© Eric Storch')
    meta(name='author', lang='en', content='Eric Storch')
    meta(name='robots', content='Index,Follow')
    meta(name='description', content='Portfolio & Web-Service Demonstration Platform')
    meta(name='keyword', content='Eric Storch, Software Developer, Programmer, Seattle')
  body(ng-app="app", ng-controller="appController")
body
  div#edo-navbar-wrapper
    div#edo-navbar
      div#edo-navbar-content
        div#edo-navbar-logo
          h3 EdoCode
        div.edo-navbar-item
          a(ng-href="#/about")
            div.edo-navbar-overbar
            div.edo-navbar-name
              p About
        div.edo-navbar-item
          a(ng-href="#/web-services")
            div.edo-navbar-overbar
            div.edo-navbar-name
              p Web-Services
        div.edo-navbar-item
          a(ng-href="#/resume")
            div.edo-navbar-overbar
            div.edo-navbar-name
              p Resume
        div.edo-navbar-item
          a(ng-href="#/contact")
            div.edo-navbar-overbar
            div.edo-navbar-name
              p Contact
        div#edo-navbar-tail
          div#edo-navbar-tailitems
            a(href="http://www.linkedin.com/pub/eric-storch/5a/5ba/654/", target="_blank")
              img(src='assets/linkedin.jpg')
            a(href="https://github.com/himalstorch/edocode.io", target="_blank")
              img(src='assets/github.jpg')
  div#edo-content-wrapper
    div#edo-content
      div(ng-view)

  div#edo-footer-wrapper
    div#edo-footer
      p.page-footer
        | © 2014 Eric Storch<br>
        | Site Created With&nbsp;
        a(href="https://angularjs.org/", target="_blank") AngularJS&nbsp;
        | /&nbsp;
        a(href="http://getbootstrap.com/", target="_blank") Bootstrap

link(rel="stylesheet", href="css/bootstrap.css")
link(rel="stylesheet", href="css/custom.css")
script(src="js/angular.js")
script(src="js/angular-route.js")
script(src="js/jquery.js")
script(src="js/app.js")
script(src="js/custom.js")